{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": "../",
    "baseUrl": "../",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "paths": {
      "@pwa/prisma": [
        "pwa-prisma/src"
      ],
      "@pwa/prisma/*": [
        "pwa-prisma/src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}