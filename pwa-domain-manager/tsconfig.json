{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../pwa-domain-manager/tsconfig.app.json",
  "compilerOptions": {
    "outDir": "../pwa-domain-manager/dist",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["../pwa-domain-manager/node_modules", "dist", "test", "**/app.spec.ts"]
}
