{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "outDir": "../../dist/apps/auth-service",
    "target": "ES2019",
    "module": "CommonJS",
    "types": [
      "jest",
      "node"
    ],
    "baseUrl": "../",
    "paths": {
      "@pwa/prisma": [
        "pwa-prisma/src"
      ],
      "@pwa/prisma/*": [
        "pwa-prisma/src/*"
      ]
    },
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*",
    "../pwa-shared/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts"
  ]
}