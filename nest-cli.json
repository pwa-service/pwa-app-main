{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "pwa-api-gateway",
      "entryFile": "main",
      "sourceRoot": "pwa-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "pwa-api-gateway/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "pwa-auth-service",
      "entryFile": "main",
      "sourceRoot": "pwa-auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "pwa-auth-service/tsconfig.app.json"
      }
    },
    "event-handler": {
      "type": "application",
      "root": "pwa-event-handler",
      "entryFile": "main",
      "sourceRoot": "pwa-event-handler/src",
      "compilerOptions": {
        "tsConfigPath": "pwa-event-handler/tsconfig.app.json"
      }
    },
    "pwa-logger": {
      "type": "application",
      "root": "pwa-logger",
      "entryFile": "main",
      "sourceRoot": "pwa-logger/src",
      "compilerOptions": {
        "tsConfigPath": "pwa-logger/tsconfig.app.json"
      }
    }
  }
}
